@model Parent

<div class="modal fade" id="addParent" data-keyboard="true" tabindex='-1'>
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header alert-success">
                <h4 class="modal-title" id="addParentLabel">Add Parent</h4>
                <button type="button" class="close" data-bs-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="Create">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div style="height:250px; overflow-y:auto;">
                        <table id="ChildTable" class="table">
                            <thead>
                                <tr>                                   
                                    <th>Child Name</th>
                                    <th style="width:75px;">
                                        <button id="ButtonAddChild" type="button" class="btn btn-sm btn-secondary visible" onclick="AddItem('ChildTable')"> Ekle </button>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.Children.Count; i++)
                                {
                                    <tr>                                       
                                        <td>
                                            <input asp-for="Children[i].Name" class="form-control" />
                                        </td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="RemoveItem(this)">Sil</button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <input type="hidden" id="hiddenTableLastIndex" value="0" />
                    
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal" data-controller="Parent" data-action="Create">Save changes</button>
            </div>
        </div>
    </div>
</div>
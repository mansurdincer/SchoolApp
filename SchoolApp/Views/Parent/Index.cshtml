@model IEnumerable<SchoolApp.Models.Parent>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<div id="PlaceHolderHere"></div>

<button type="button" class="btn btn-success" data-toggle="ajax-modal" data-target="#addParent" data-url="@Url.Action("Create")">Create</button>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Children)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var child in item.Children)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => child.Name)
                        </div>
                    }
                <td>
                <td>
                    
                    <button type="button" class="btn btn-warning" data-toggle="ajax-modal" data-target="#editParent" data-url="@Url.Action("Edit", new { id = item.Id })">Edit</button>

                    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#editDetails" data-url="@Url.Action("Details", new { id = item.Id })">Detail</button>
                    
                    <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#deleteParent" data-url="@Url.Action("Delete", new { id = item.Id })">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
